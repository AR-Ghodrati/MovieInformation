<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re"
    android:layout_width="fill_parent"
    android:layout_height="115dp"
    android:background="@color/backgroundunSwith"
    android:minHeight="100dp"
    android:padding="6dip">

    <View
        android:id="@+id/viewyear"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/colorAccent"
        android:visibility="invisible" />

    <View
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentTop="@+id/icon"
        android:layout_marginTop="95dp"
        android:background="@color/colorAccent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="85dp"
        android:layout_below="@+id/viewyear"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="12dip"
        android:layout_toRightOf="@id/icon"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignLeft="@+id/firstLine"
        android:layout_alignStart="@+id/firstLine"
        android:layout_below="@+id/firstLine"
        android:layout_marginTop="15dp"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:text="Description"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/yearsort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/viewyear"
        android:layout_centerHorizontal="true"
        android:text="2017"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"
        android:visibility="invisible" />
</RelativeLayout>

