<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/re"
    android:layout_width="fill_parent"
    android:layout_height="125dp"
    android:background="@color/backgroundunSwith"
    android:minHeight="100dp"
    android:padding="6dip">

    <View
        android:id="@+id/viewyear"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient"
        android:visibility="invisible" />

    <View
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="72dp"
        android:layout_height="90dp"
        android:layout_below="@+id/yearsort"
        android:layout_marginRight="6dip"
        android:layout_marginTop="1dp"
        android:contentDescription="TODO"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="18dip"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Example application"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignLeft="@+id/firstLine"
        android:layout_alignStart="@+id/firstLine"
        android:layout_below="@+id/firstLine"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="15dp"

        android:layout_toLeftOf="@+id/IsTranlated"
        android:layout_toStartOf="@+id/IsTranlated"
        android:ellipsize="marquee"
        android:gravity="right"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="3dp"
        android:singleLine="true"
        android:text="نام فارسی"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/yearsort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_vertical"
        android:text="2017"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="9sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/IsTranlated"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/secondLine"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/secondLine"
        android:visibility="gone"
        app:srcCompat="@drawable/googletranslate" />

    <ImageView
        android:id="@+id/transletedLogo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/secondLine"
        android:visibility="gone"
        app:srcCompat="@drawable/googletranslate" />

</RelativeLayout>

