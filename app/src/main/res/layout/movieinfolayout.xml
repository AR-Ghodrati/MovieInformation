<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moviedata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSwith"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ar.movieinformation.fullmovieinfo">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/rating"
            layout="@layout/rating_layout" />

        <View
            android:id="@+id/spilit"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/cunterofCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spilit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/cunterofCount"
            android:layout_alignRight="@+id/cunterofCount"
            android:layout_below="@+id/spilit"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/userrating" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

